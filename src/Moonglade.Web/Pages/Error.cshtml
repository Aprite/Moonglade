           /^~>  \        _/ <
          |  |         \       \
          |  | \        \        \
          -^-\  \       |        )
               `\_______/^\______/
            </pre>

            <div class="content">
                <h1>Server Blow Up Sky High</h1>
                @if (Model.ShowRequestId)
                {
                    <p>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }
                <div>
                    <a class="btn btn-light" asp-page="/Index">Home Page</a>
                </div>
            </div>
        </div>
    </main>
</div>
</body>
</html>